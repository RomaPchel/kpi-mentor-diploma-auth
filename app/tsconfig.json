{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "emitDeclarationOnly": true,
  },
  "include": ["src"]

}