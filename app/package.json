{
  "type": "module",
  "name": "authentication-service",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx swc --strip-leading-paths --config-file .swcrc ./src -d dist",
    "prettier:format": "pnpm exec prettier . --write",
    "prettier:check": "npx prettier . --check\n",
    "docker:up": "docker compose -f ../docker/compose.yaml up -d",
    "generate:dts": "tsc --emitDeclarationOnly --outDir dist",
    "build:all": "npm run build && npm run generate:dts",
    "start": "node --env-file .env --experimental-specifier-resolution=node dist/index.js",
    "watch": "pnpm docker:up & npx nodemon --config ./nodemon.json",
    "start:dev": "npm run watch",
    "test": "pnpm build && npx concurrently --kill-others --success first 'pnpm test:serve' 'pnpm test:jest:no-build'",
    "test:coverage": "pnpm build && pnpm test:setup & npx concurrently --kill-others --success first 'pnpm test:serve' 'pnpm test:jest:no-build --coverage'",
    "test:verbose": "cross-env DEBUG=@nyce:*,@NYCE:* pnpm test",
    "test:jest": "pnpm build && pnpm test:jest:no-build",
    "test:jest:no-build": "cross-env TEST_RUN=true NODE_OPTIONS=--experimental-vm-modules jest",
    "test:serve": "pnpm start --test-run"
  },
  "dependencies": {
    "@jest/globals": "^29.7.0",
    "@koa/cors": "^5.0.0",
    "@mikro-orm/core": "^6.4.3",
    "@mikro-orm/postgresql": "^6.4.3",
    "@mikro-orm/reflection": "^6.4.3",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "jsonwebtoken": "^9.0.2",
    "kpi-diploma-typescript-core": "1.0.2",
    "path-to-regexp": "^8.2.0",
    "socket.io": "^4.8.1",
    "swagger-ui-koa": "^0.0.1",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/koa": "^2.13.5",
    "@types/koa__cors": "^5.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-router": "^7.4.4",
    "bcrypt": "^5.1.1",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^13.0.1",
    "prettier": "3.4.2",
    "typescript": "^5.7.3"
  },
  "watch": "pnpm build:all && pnpm docker:up & npx nodemon --config ./nodemon.json"
}
